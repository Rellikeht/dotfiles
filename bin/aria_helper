#!/usr/bin/env sh

MAXD=32
MAXC=16
SPLIT=16
aria2c --continue=true \
    --max-concurrent-downloads=$MAXD \
    --max-connection-per-server=$MAXC \
    --split=$SPLIT \
    --optimize-concurrent-downloads=true \
    --bt-detach-seed-only=true \
    --bt-max-peers=80 \
    --seed-ratio=0.0 \
    --check-integrity=true \
    "$@"
