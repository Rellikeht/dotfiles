#!/usr/bin/env sh

NOTES="[format_note!*=Untested]"
LANG1="[format_note*=original]$NOTES"
LANG2="$NOTES"
if [ -n "$YTL" ]; then
    LANG1="[language=$YTL]"
    LANG2="$LANG2[language=$YTL]"
fi
[ -n "$YTABR" ] && ABR="[abr>=$YTABR]"

exec yt-dlp -f "(ba$ABR$LANG1/ba$ABR$LANG2)+bv/b$ABR$LANG1/b$ABR$LANG2" "$@"
