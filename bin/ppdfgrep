#!/bin/sh
# This is all shit

while [ -n "$1" ] && [ ! -e "$1" ]; do
    ARGS="$ARGS \"$1\""
    shift
done

# TODO exit codes ?
CMD="
pdfgrep --color always -H $ARGS {}
"

# Unsafe because some of us have non ascii characters in paths :)
if [ -n "$1" ]; then
    find $@ -iname '*\.pdf' -print0 |
        parallel --unsafe -0 -I{} "$CMD"

else
    find . -iname '*\.pdf' -print0 |
        parallel --unsafe -0 -I{} "$CMD"
fi
