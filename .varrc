#!/usr/bin/env bash

# {{{ helpers

inpath() {
    echo "$PATH" |
        sed 's/:/\n/g' |
        grep -E "^$1/?$" >/dev/null
}

pathadd() {
    if ! inpath "$1"; then
        export PATH="$PATH:$1"
    fi
}

pathinsert() {
    if ! inpath "$1"; then
        export PATH="$1:$PATH"
    fi
}

# }}}

# {{{ important stuff

export EDITOR='vim'
export VISUAL='svim'

if [ "$(uname)" = "Linux" ] && [ -f /etc/os-release ]; then
    DISTRO="$(sed -En '/^ID/s/ID=//p' /etc/os-release)"
    export DISTRO
fi

