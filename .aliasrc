# {{{ helpers
alias progp=' \
    echo $PATH | \
    xargs -d ":" -I{} \
    find -L "{}" -executable -a -type f \
    2>/dev/null
    '

alias progs=' \
    echo $PATH | \
    xargs -d ":" -I{} \
    find -L "{}" -executable -a -type f \
    -printf "%f\n" 2>/dev/null \
