## files

# alias fff='find -type f | fzf'
# alias ffs='find -type f | fzs'
# Doesn't work
alias fff='fzh $fzf -type f'
alias ffs='fzh $fzs -type f'

## dirs

# alias fzd='find -type d | deffuz'
# alias fzd2='find -maxdepth 2 -type d | deffuz'
