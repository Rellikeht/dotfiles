# helpers {{{
alias progp=' \
    echo -n $PATH | \
    xargs -d ":" -I{} \
    find -L "{}" -executable -a -type f \
    2>/dev/null
    '

# sed "s/:/\n/g;/^$/d"
alias progs=' \
    echo -n $PATH |\
    xargs -d ":" -I{} \
    find -L "{}" -executable -a -type f \
    -printf "%f\n" 2>/dev/null \
    '

alias prgs='progs | sort | uniq'
