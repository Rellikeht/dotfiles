#!/usr/bin/env sh

xrdb .Xresources &

keynav daemonize &
setxkbmap -option caps:escape
[ -x ~/.kb-plug.sh ] && ~/.kb-plug.sh &

unclutter -idle 1.2 &
nitrogen --restore &

xbindkeys -n &

[ -x ~/.audio_start.sh ] && ~/.audio_start.sh &
sleep 0.2
playerctld daemon &

[ -x "$HOME/.xinitrc_local" ] && ~/.xinitrc_local
