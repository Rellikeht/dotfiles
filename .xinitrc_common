#!/bin/sh

[ -e "$HOME/.xinitrc_local" ] && ~/.xinitrc_local
xrdb .Xresources &

keynav daemonize &
setxkbmap -option caps:escape
xbindkeys &
~/.kb-plug.sh &

xcompmgr -fcD 1 &
unclutter --timeout 1.2 &
nitrogen --restore &

/usr/lib/notification-daemon-1.0/notification-daemon &
~/.audio_start.sh &
playerctld daemon &
