dir_arg() {
    if [ -z "$1" ]; then
        echo "."
    else
        echo "$1"
    fi
}

find_command() {
    local SWITCH ALL DIR PATTERN
    SWITCH="$1"
    ALL="$2"
    DIR=.
    shift 2

    if [ -d "$1" ]; then
        DIR="$1"
        shift
    fi

    if [ -n "$1" ]; then
        PATTERN="$ALL$1$ALL"
        shift
    else
        PATTERN="$ALL"
    fi

    find_system_special "$DIR" "$SWITCH" "$PATTERN" $@
}

noerr() {
    "$@" 2>/dev/null
}

silent() {
    noerr "$@" >/dev/null
}

