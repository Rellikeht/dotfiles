else

    find_system_special() {
        local D
        D="$1"
        shift
        find "$D" -regextype posix-extended $@
    }

    wat() {
        local WTIME # COMMAND
        if [ "$1" -gt 0 ] 2>/dev/null; then
            WTIME="$1"
            shift
        else
            WTIME=1
            # COMMAND="$@"
        fi
        watch -n "$WTIME" -d "$@"
    }

    watc() {
        local T
        T="$1"
        shift
        wat "$T" -c "$@"
    }

    hm() {
        help2man $@ | man /dev/stdin
    }

fi

hms() {
    hm --no-discard-stderr $@
}

rlw() {
