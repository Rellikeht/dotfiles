#Functions
bins () {
	pacman -Ql $1 | egrep "`echo $PATH | sed 's/:/|/g'`"
}

cdc () {
	cd $1 && clear
}

cdl () {
	cdc $1 && ls
}

cdll () {
	cdc $1 && ll
}

llh () {
	ll $1 | head
}

maxe () {
	if [ -n "$2" ]
	then
		cmds="$2"
		prec="$1"
	else
		cmds="$1"
		prec=20
	fi
	str=`echo -n $cmds | sed -z 's/[^;$\n]$/\0;/'`
	maxima --very-quiet --batch-string="fpprec:$prec \$ fpprintprec:$prec \$ $str quit();" | \
	sed -z 's/load[^\n]*\n[^\n]*\n//g' | \
	egrep '^[ 	]|\$|b0$|]$'
}

gple () {
	gnuplot -e "plot $1;pause -1"
}

econf () {
	if [ -n "$2" ]
	then
		$1 $2
	else
		svim $1
	fi
}

eal () {
	econf $1 /etc/.aliasrc
}

evr () {
	econf $1 /etc/.varrc
}

