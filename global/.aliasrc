# fltr - symbolic link for grep in /usr/local/bin for nonconflicting name
alias its_just_grep='its_just_grep --color=always'
alias fpr='ps axh o size,rss,pid,user,cmd,state,pcpu | \
    its_just_grep -v its_just_grep | its_just_grep -E'
alias fprh="ps axh o size,rss,pid,user,cmd,state,pcpu | \
    numfmt --from-unit=1K --field=1,2 --to=iec | \
    its_just_grep -v its_just_grep | its_just_grep -E"
