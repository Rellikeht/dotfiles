alias wb='bins | grep'

alias sal='source /etc/.aliasrc'
alias sfn='source /etc/.funcrc'
alias bal='bat /etc/.aliasrc'
alias bfn='bat /etc/.funcrc'

# Tools
alias qc="qalc -s 'decimal comma off'"
alias de='dc -e'

## single
alias fzs='fzf +m -e'
## multi
alias fzf='fzf -m -e'

# fzy
alias fzy='fzy -l 20'

## default fuzzy finer with single match
alias deffuz=fzs

## dirs
alias fzd='find -type d | deffuz'
## cd with fuzzy dirs
alias cdf='cd "$(fzd)"'

## files
alias fff="fzf | sed 's/^.*$/\"\0\"/g'"
alias ffe='fff | xargs'

## fuzzy select program to run on separate shell
alias fze='progs | deffuz | sh -s'
## fuzzy select program to run
alias fzr='$(progs | deffuz)'

# TODO merge that cd's
