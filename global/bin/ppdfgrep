#!/bin/sh

while [ ! -e "$1" -a -n "$1" ]
do
    ARGS=$(echo $ARGS $1)
	shift
done

DIR=.
if [ -n "$1" ]
then
    DIR="$@"
    shift
fi

# TODO TEST
find "$DIR" -iname '*\.pdf' -print0 |\
    parallel -0 -I{} pdfgrep -H $ARGS {}

