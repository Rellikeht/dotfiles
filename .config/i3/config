bindsym $mod+underscore gaps outer current minus 12
bindsym $mod+bracketright gaps inner current plus 6
bindsym $mod+bracketleft gaps inner current minus 6
bindsym $mod+braceright gaps inner current plus 12
bindsym $mod+braceleft gaps inner current minus 12

#border
