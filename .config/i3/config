    colors {
        background #00183f
        statusline #ffffff

        focused_workspace  #ffffff #285577 #ffffff
        active_workspace   #ffffff #333333 #dddddd
        inactive_workspace #888888 #222222 #bbbbbb
        urgent_workspace   #ffffff #900000 #ffffff
    }
}

