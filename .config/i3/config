# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Shift+h resize shrink width 4 px or 4 ppt
        bindsym Shift+j resize grow height 4 px or 4 ppt
        bindsym Shift+k resize shrink height 4 px or 4 ppt
        bindsym Shift+l resize grow width 4 px or 4 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Shift+Left resize shrink width 4 px or 4 ppt
        bindsym Shift+Down resize grow height 4 px or 4 ppt
        bindsym Shift+Up resize shrink height 4 px or 4 ppt
        bindsym Shift+Right resize grow width 4 px or 4 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen (l) LVDS-1 ON, (h) HDMI ON, (k) LVDS-1 OFF, (j) HDMI OFF
mode "mode display" {
    bindsym h exec xrandr --output HDMI-1 --auto --left-of LVDS-1 && nitrogen --restore
    bindsym l exec xrandr --output LVDS-1 --auto --right-of HDMI-1 && nitrogen --restore
    bindsym k exec xrandr --output LVDS-1 --auto --off && nitrogen --restore
    bindsym j exec xrandr --output HDMI-1 --auto --off && nitrogen --restore

#    bindsym $mod+p exec xrandr --output LVDS-1 --off && nitrogen --restore
#    bindsym $mod+o exec xrandr --output LVDS-1 --auto && xrandr --output LVDS-1 --mode 1600x900 --right-of HDMI-1 && nitrogen --restore

    bindsym Escape mode "default"
    bindsym Return mode "default"
    bindsym $mod+p mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+p mode "mode display"

mode "mocp control" {
    bindsym h exec mocp -k-2 # -2sec 
    bindsym l exec mocp -k+2 # +2sec
    bindsym k exec mocp -f # next
    bindsym j exec mocp -r # prev
    bindsym Shift+h exec mocp -k-10 # -10sec
    bindsym Shift+l exec mocp -k+10 # +10sec
    bindsym p exec mocp -G # toggle play/pause
    bindsym s exec mocp -s # stop
    bindsym space exec mocp -U # play
    bindsym c exec mocp -P # pause
    bindsym Return exec mocp -p # start playing
    bindsym bracketleft exec mocp -v-5 # vol -5 
    bindsym bracketright exec mocp -v+5 # vol +5 
    bindsym Shift+bracketleft exec mocp -v-1 # vol -1
    bindsym Shift+bracketright exec mocp -v+1 # vol +1
    bindsym r exec mocp -t s # toggle shuffle
    bindsym Shift+r exec pulseaudio --kill # restart pulseaudio
    bindsym e exec mocp -S # start server
    bindsym q exec mocp -x # exit server
    bindsym Shift+e exec "amixer -c 0 -- sset PCM 0dB+,1dB+"
    # vol +1dB on right channel
    bindsym Shift+q exec "amixer -c 0 -- sset PCM 1dB+,0dB+"
    # vol +1dB on left channel
    bindsym Shift+c exec "amixer -c 0 -- sset PCM 0dB+,1dB-"
    # vol -1dB on right channel
    bindsym Shift+z exec "amixer -c 0 -- sset PCM 1dB-,0dB+"
    #vol -1dB on left channel
    bindsym Shift+w exec "amixer -c 0 -- sset PCM 1dB+"
    # vol +1dB on both channels
    bindsym Shift+x exec "amixer -c 0 -- sset PCM 1dB-"
    #vol -1dB on both channels
    bindsym $mod+Shift+period exec "amixer -c 0 -- sset Master 3dB+"
    # vol +1dB to main level
    bindsym $mod+Shift+comma exec "amixer -c 0 -- sset Master 3dB-"
    # vol +1dB to main level
    bindsym d exec mocp -c # clear playlist
    bindsym i exec qterminal -e mocp # terminal with interface  
    bindsym a exec qterminal -e alsamixer # terminal with mixer
    bindsym Shift+i exec xmessage `mocp -i` # message about current state
    bindsym m exec mocp `i3-input -l 2 -P "Percent from beginning: " -F "-j %s%"` # rewind using i3-input
    bindsym n exec mocp `i3-input -l 2 -P "Seconds from beginning: " -F "-j %ss"` # rewind using i3-input

    bindsym Escape mode "default"
    bindsym $mod+m mode "default"

}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+m mode "mocp control"

